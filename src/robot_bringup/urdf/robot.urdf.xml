<?xml version="1.0"?>
<robot name="square_bot">

<link name="base_link">
  <visual>
    <origin xyz="0 0 0.055" rpy="0 0 0"/>
    <geometry><box size="0.20 0.15 0.05"/></geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0.055" rpy="0 0 0"/>
    <geometry><box size="0.20 0.15 0.05"/></geometry>
  </collision>
  <inertial>
    <origin xyz="0 0 0.055" rpy="0 0 0"/>
    <mass value="1.0"/>
    <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
  </inertial>
</link>

  <!-- Left wheel -->
<link name="left_wheel_link">
  <!-- Rotate cylinder so its axis is along Y (axle) -->
  <visual>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <geometry><cylinder radius="0.03" length="0.02"/></geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <geometry><cylinder radius="0.03" length="0.02"/></geometry>
  </collision>
  <inertial>
    <mass value="0.2"/>
    <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
  </inertial>
</link>

<joint name="left_wheel_joint" type="continuous">
  <parent link="base_link"/>
  <child link="left_wheel_link"/>
  <!-- Wheel center: y = +0.08, z = wheel radius (0.03) -->
  <origin xyz="0 0.08 0.03" rpy="0 0 0"/>
  <axis xyz="0 1 0"/>
</joint>

<gazebo reference="left_wheel_link">
  <mu1>2.0</mu1>
  <mu2>2.0</mu2>
</gazebo>

  <link name="right_wheel_link">
  <visual>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <geometry><cylinder radius="0.03" length="0.02"/></geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <geometry><cylinder radius="0.03" length="0.02"/></geometry>
  </collision>
  <inertial>
    <mass value="0.2"/>
    <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
  </inertial>
</link>

<joint name="right_wheel_joint" type="continuous">
  <parent link="base_link"/>
  <child link="right_wheel_link"/>
  <origin xyz="0 -0.08 0.03" rpy="0 0 0"/>
  <axis xyz="0 1 0"/>
</joint>

<gazebo reference="right_wheel_link">
  <mu1>2.0</mu1>
  <mu2>2.0</mu2>
</gazebo>

  <!-- camera_link -->
  <link name="camera_link">
    <visual><geometry><box size="0.05 0.05 0.05"/></geometry></visual>
  </link>

  <link name="camera_optical_frame"/>

  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_optical_frame"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.1 0.0 0.2" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo camera -->
  <gazebo reference="camera_link">
    <sensor name="camera_sensor" type="camera">
      <always_on>true</always_on>
      <update_rate>10.0</update_rate>
      <camera>
        <image><width>640</width><height>480</height><format>R8G8B8</format></image>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <ros><namespace>/camera</namespace></ros>
        <frame_name>camera_optical_frame</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=/cmd_vel</remapping>
      </ros>

      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <wheel_separation>0.16</wheel_separation>
      <wheel_diameter>0.06</wheel_diameter>

      <odom_frame>world</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>

      <publish_odom>false</publish_odom>
      <publish_tf>false</publish_tf>

      <odom_topic>/world</odom_topic>
      <cmd_vel_topic>/cmd_vel</cmd_vel_topic>

      <update_rate>50</update_rate>
    </plugin>
  </gazebo>

  <link name="caster_link">
  <visual>
    <geometry><sphere radius="0.02"/></geometry>
  </visual>
  <collision>
    <geometry><sphere radius="0.02"/></geometry>
  </collision>
  <inertial>
    <mass value="0.05"/>
    <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
  </inertial>
</link>

<joint name="caster_joint" type="fixed">
  <parent link="base_link"/>
  <child link="caster_link"/>
  <!-- rear-ish and low: touches ground at z=0 (center z=0.02) -->
  <origin xyz="-0.08 0.0 0.02" rpy="0 0 0"/>
</joint>

<gazebo reference="caster_link">
  <!-- low friction so it doesn't fight turns -->
  <mu1>0.2</mu1>
  <mu2>0.2</mu2>
</gazebo>

<link name="caster_link2">
  <visual>
    <geometry><sphere radius="0.02"/></geometry>
  </visual>
  <collision>
    <geometry><sphere radius="0.02"/></geometry>
  </collision>
  <inertial>
    <mass value="0.05"/>
    <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
  </inertial>
</link>

<joint name="caster_joint2" type="fixed">
  <parent link="base_link"/>
  <child link="caster_link2"/>
  <origin xyz="0.08 0.0 0.02" rpy="0 0 0"/>
</joint>

<gazebo reference="caster_link2">
  <mu1>0.2</mu1>
  <mu2>0.2</mu2>
</gazebo>

</robot>